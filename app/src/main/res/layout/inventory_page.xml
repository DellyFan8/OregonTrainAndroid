<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="wrap_content">

    <ScrollView android:id="@+id/main_slide" android:layout_width="wrap_content" android:layout_height="match_parent">
        <RelativeLayout 
            android:id="@+id/content_container" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">
            <RelativeLayout 
                android:id="@+id/page_main_slide_ek1" 
                android:layout_marginTop="0dp" 
                android:layout_marginStart="0dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View 
                    android:id="@+id/_bg__main_slide_ek2" 
                    android:background="@drawable/_bg__main_slide_ek2_shape" 
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp" 
                    android:layout_width="960dp" 
                    android:layout_height="540dp"/>
                <ImageView
                    android:id="@+id/image_1"
                    android:src="@drawable/image_1" 
                    android:contentDescription="image_1" 
                    android:layout_marginStart="0dp" 
                    android:layout_marginTop="0dp"
                    android:layout_width="960dp" 
                    android:layout_height="540dp"/>
                <View 
                    android:id="@+id/exit"
                    android:background="@drawable/rectangle_4_shape"
                    android:layout_marginStart="911dp"
                    android:layout_marginTop="6dp" 
                    android:layout_width="46dp" 
                    android:layout_height="37dp"/>
                <ImageView 
                    android:id="@+id/pause_1" 
                    android:src="@drawable/pause_1" 
                    android:contentDescription="pause_1"
                    android:layout_marginStart="920dp" 
                    android:layout_marginTop="10dp" 
                    android:layout_width="28dp"
                    android:layout_height="26dp"/>
                <Button
                    android:id="@+id/party"
                    android:layout_width="305dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/rectangle_9_shape"
                    android:text="Party"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    >

                </Button>

                <Button
                    android:id="@+id/inventory"
                    android:layout_width="295dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="310dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/rectangle_9_shape"
                    android:text="Inventory"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    >

                </Button>

                <Button
                    android:id="@+id/rationsDown"
                    android:layout_width="100dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="310dp"
                    android:layout_marginTop="500dp"
                    android:background="@drawable/rectangle_9_shape"
                    android:text="Decrease"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    >

                </Button>

                <TextView
                    android:id="@+id/rations"
                    android:layout_width="95dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="410dp"
                    android:layout_marginTop="500dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="16dp"
                    android:text="Rations:\n"
                    android:gravity="center">

                </TextView>

                <Button
                    android:id="@+id/rationsUp"
                    android:layout_width="100dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="505dp"
                    android:layout_marginTop="500dp"
                    android:background="@drawable/rectangle_9_shape"
                    android:fontFamily="@font/inter_bold"
                    android:text="Increase"
                    android:textColor="@color/white"
                    android:textSize="16dp">

                </Button>

                <Button
                    android:id="@+id/history"
                    android:layout_width="305dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="605dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/rectangle_9_shape"
                    android:text="History"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    >

                </Button>



            </RelativeLayout>
            <TextView
                android:id="@+id/history_box"
                android:layout_width="960dp"
                android:layout_height="450dp"
                android:layout_marginTop="60dp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_regular">
            </TextView>

            <TextView
                android:id="@+id/party_name"
                android:textSize="30dp"
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:layout_marginTop="60dp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_regular">
            </TextView>

            <TextView
                android:id="@+id/party_age"
                android:textSize="30dp"
                android:layout_marginStart="300dp"
                android:layout_width="100dp"
                android:layout_height="400dp"
                android:layout_marginTop="60dp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_regular">
            </TextView>

            <TextView
                android:id="@+id/party_health"
                android:textSize="30dp"
                android:layout_marginStart="400dp"
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:layout_marginTop="60dp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_regular">
            </TextView>

            <TextView
                android:id="@+id/party_effects"
                android:textSize="30dp"
                android:layout_marginStart="600dp"
                android:layout_width="355dp"
                android:layout_height="400dp"
                android:layout_marginTop="60dp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_regular">
            </TextView>

        </RelativeLayout>
    </ScrollView>
</HorizontalScrollView>